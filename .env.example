# ============================================
# JSON Viewer Environment Configuration
# ============================================

# --------------------------------------------
# Database Configuration (REQUIRED)
# --------------------------------------------
DATABASE_URL="postgresql://user:password@localhost:5432/json_viewer"

# --------------------------------------------
# Redis Configuration (REQUIRED)
# --------------------------------------------
REDIS_URL="redis://localhost:6379"

# --------------------------------------------
# NextAuth Configuration (REQUIRED)
# --------------------------------------------
# Base URL for NextAuth callbacks
NEXTAUTH_URL="http://localhost:3456"

# Secret for JWT encryption (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-32-character-or-longer-secret-here"

# --------------------------------------------
# OAuth Providers (REQUIRED)
# --------------------------------------------
# GitHub OAuth App credentials
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Google OAuth App credentials
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# --------------------------------------------
# Public Application URLs (REQUIRED)
# --------------------------------------------
NEXT_PUBLIC_APP_URL="http://localhost:3456"
NEXT_PUBLIC_WEBSOCKET_URL="ws://localhost:3456"

# --------------------------------------------
# Performance Settings (OPTIONAL)
# --------------------------------------------
# Maximum JSON file size in megabytes (default: 2048)
MAX_JSON_SIZE_MB=2048

# JSON streaming chunk size in bytes (default: 1048576)
JSON_STREAMING_CHUNK_SIZE=1048576

# --------------------------------------------
# Analytics & Tracking (OPTIONAL)
# --------------------------------------------
# Google Analytics Measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=""

# Facebook Pixel ID
NEXT_PUBLIC_FB_PIXEL_ID=""

# Hotjar Site ID
NEXT_PUBLIC_HOTJAR_ID=""

# --------------------------------------------
# SEO Verification Codes (OPTIONAL)
# --------------------------------------------
# Google Search Console verification
GOOGLE_SITE_VERIFICATION=""
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=""

# Yandex Webmaster verification
YANDEX_VERIFICATION=""

# Bing Webmaster verification
BING_VERIFICATION=""

# Facebook App ID for Open Graph
FACEBOOK_APP_ID=""

# --------------------------------------------
# Build Configuration (OPTIONAL)
# --------------------------------------------
# Custom build ID (auto-generated if not set)
BUILD_ID=""
NEXT_PUBLIC_BUILD_ID=""

# CI environment indicator
CI=""

# --------------------------------------------
# Testing Configuration (OPTIONAL)
# --------------------------------------------
# Base URL for Playwright tests
PLAYWRIGHT_BASE_URL="http://localhost:3456"
BASE_URL="http://localhost:3456"

# --------------------------------------------
# Node Configuration (OPTIONAL)
# --------------------------------------------
# Node environment (development, production, test)
NODE_ENV="development"

# Node memory limit
NODE_OPTIONS="--max-old-space-size=8192"

# Port for development server
PORT=3456
